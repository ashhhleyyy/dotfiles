ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/ram]
type = internal/memory
format = <label>
label = RAM: %percentage_used%% (%gb_used%)

[module/net]
type = internal/network
interface = wlan0
format-connected =  <label-connected>
format-disconnected = 睊 <label-disconnected>
label-connected = %essid% %downspeed:8%  %upspeed:8% 
label-connected-foreground = #98C379
label-disconnected = %ifname%
label-disconnected-foreground = #E06C75

; Music controls

[module/nowplaying]
type = custom/script
tail = true
format =  <label>
format-foreground = #98C379
exec = ~/.config/polybar/scroll_spotify_status.sh

[module/music-prev]
type = custom/script
exec = echo "玲"
format = <label>
click-left = playerctl previous -p playerctld
format-foreground = #98C379

[module/music-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 1
click-left = playerctl play-pause -p playerctld
format-foreground = #98C379

[module/music-next]
type = custom/script
exec = echo "怜"
format = <label>
click-left = playerctl next -p playerctld
format-foreground = #98C379

[module/vol]
type = internal/pulseaudio
use-ui-max = false

format-volume = 墳 <label-volume> <bar-volume>
format-muted = <label-muted>

label-muted = 婢 Muted
label-muted-foreground = #E06C75

bar-volume-width = 10
bar-volume-foreground-0 = #C678DD
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2

[module/clock]
type = internal/date
time = %H:%M:%S
label = %time%
label-foreground = #61AFEF

[module/github]
type = internal/github
token = ${file:~/.config/github.pat}
user = ashhhleyyy
label =  %notifications%
label-offline =  Offline
label-offline-foreground = #E06C75
